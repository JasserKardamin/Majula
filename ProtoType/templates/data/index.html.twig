{% extends 'base.html.twig' %}

{% block data %}
    {% set method_name = app.request.attributes.get('_controller')|split('::')|last %}
    <section class="py-5">
        {% if method_name ends with 'index' %}
            <h3 class="display-4 fw-bold">Most Recent</h3>
        {% elseif method_name ends with 'myposts' %}
            <h3 class="display-4 fw-bold">My Posts</h3>
        {% endif %}
        
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                {% if data is empty %}
                    <h2 style="height=20%;">No Results Found.</h2>
                {% else %}
                    {% for element in data %}
                        <div class="col mb-5">
                            <div class="card h-100">
                                {% if method_name ends with 'index' %}
                                    <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">New</div>
                                {% endif %}
                                
                                {% if element.type == "exam" %}
                                    <img class="card-img-top" src="{{ asset('assets/images/examlayout.png') }}" alt="Exam Layout" />
                                {% elseif element.type == "serie" %}
                                    <img class="card-img-top" src="{{ asset('assets/images/TDlayout.png') }}" alt="TD Layout" />
                                {% elseif element.type == "test" %}
                                    <img class="card-img-top" src="{{ asset('assets/images/testlayout.png') }}" alt="Test Layout" />
                                {% else %}
                                    <img class="card-img-top" src="{{ asset('assets/images/courselayout.png') }}" alt="Course Layout" />
                                {% endif %}
                                
                                <!-- Post details -->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <h5 class="fw-bolder">{{ element.title }}</h5>
                                        <p>{{ element.publicationdate|date('Y-m-d') }}</p>
                                    </div>
                                </div>
                                
                                <!-- Product actions -->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center">
                                        <a class="btn btn-outline-dark mt-auto" href="{{ path('show_data_details', {'id': element.id}) }}">Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}
