{% extends 'user/baseLogin.html.twig' %}
    {% block title %}
        <title>Login</title>
    {% endblock %}
  {% block form %}
                <form action="#" method="post">
                {{ form_start(form) }}
                <div class="form-group first">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'fullName@esprit.tn'}}) }}
                </div>
                <div class="form-group last mb-3">
                    {{ form_label(form.password) }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Your Password'}}) }}
                </div>
                {% for message in app.flashes('error') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
                {% endfor %}  
                <div class="d-flex mb-5 align-items-center">
                    <span class="ml-auto"><a href="{{ path('app_user_forgotPassword') }}" class="forgot-pass">Forgot Password</a></span> 
                </div>
                        <input type="submit" value="Log In" class="btn btn-block btn-primary">
                   {{ form_end(form) }}
                    <div class="sign-up">or <span class="rr"><a href="{{ path('app_user_signup') }}" class="rr">sign up</a></span></div>              
                </form>
  {% endblock %}
