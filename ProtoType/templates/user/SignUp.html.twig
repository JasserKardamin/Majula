{% extends 'user/baseLogin.html.twig' %}
    {% block title %}
        <title>Sign up</title>
    {% endblock %}
  {% block form %}
                <form action="#" method="post">
                {{ form_start(form) }}
                <div class="form-group first">
                    {{ form_label(form.lastname) }}
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group first">
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group first">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'fullname@esprit.tn'}}) }}
                </div>
                {% for message in app.flashes('error') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
                {% endfor %}  
                <div class="form-group first">
                    {{ form_row(form.password.first, {'attr': {'class': 'form-control'}}) }}
                </div>
                    <div class="form-group first">
                    {{ form_row(form.password.second, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group first">
                    {{ form_label(form.type) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Your Password'}}) }}
                </div>
                        <input type="submit" value="sign Up" class="btn btn-block btn-primary">
                   {{ form_end(form) }}       
                </form>
  {% endblock %}
