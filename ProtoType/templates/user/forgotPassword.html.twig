{% extends 'user/baseLogin.html.twig' %}
    {% block title %}
        <title>I Forgot my password</title>
    {% endblock %}
  {% block form %}
                <form action="#" method="post">
                {{ form_start(form) }}
                <div class="form-group first">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'fullName@esprit.tn'}}) }}
                </div>                
                {% for message in app.flashes('error') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
                {% endfor %} 
                        <input type="submit" value="Confirm Email" class="btn btn-block btn-primary">
                   {{ form_end(form) }}   
                </form>
  {% endblock %}
